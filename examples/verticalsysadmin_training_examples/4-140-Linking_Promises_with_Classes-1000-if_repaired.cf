bundle common f { vars: "inputs" slist => findfiles("$(sys.masterdir)/lib/3.6/*.cf"); }
body file control { inputs => { @(f.inputs) }; }

bundle agent example {

  files:
      "/tmp/httpd.conf"
               create => "true",
            edit_line => insert_lines("ServerName localhost"),
              classes => if_repaired("httpd_restart_needed");


  commands:
    httpd_restart_needed::
      "/etc/init.d/httpd reload";


}
