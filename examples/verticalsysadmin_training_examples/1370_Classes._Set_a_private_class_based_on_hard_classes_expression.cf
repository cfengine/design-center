bundle agent example
{

classes:
    "solaris_or_linux"
        comment => "Set a custom class based on built-in classes",
        expression => "linux|solaris";


# "cf-agent --verbose" shows: 
#
# cf3>      +  Private classes augmented: 
# cf3>      +       solinux


reports:
    solaris_or_linux::
        "Yay!! I am on Solaris or Linux.";
}
