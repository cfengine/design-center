
############################################

bundle agent example

{

  files:

      "/tmp/test_from/." 

          file_select => mode_777,
          transformer => "/bin/gzip $(this.promiser)",
         depth_search => recurse("inf");

}

############################################

body file_select mode_777

{
          search_mode => { "777" };
          file_result => "mode";
}

############################################

body depth_search recurse(d)

{
                depth => "$(d)";
}

