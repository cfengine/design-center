bundle agent example {


  files:

      "/etc/motd"

            edit_line => ExpandMeFrom("/var/cfengine/inputs/templates/motd.txt");
                     }


bundle edit_line ExpandMeFrom(source) {

  delete_lines:

      ".*";

  insert_lines:

      "$(source)"

          insert_type => "file",
       expand_scalars => "true";
                                      }
