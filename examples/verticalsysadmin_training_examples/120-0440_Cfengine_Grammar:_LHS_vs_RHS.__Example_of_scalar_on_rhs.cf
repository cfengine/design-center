# Example of
#
#      cfengine_word => "quoted scalar"
#


bundle agent example
{

  vars:

      "variable_0"
              string  => "String contents...";  # a scalar value

      "variable_1"
              string  => "$(variable_0)";       # a scalar variable


  reports:

     linux::

      "/bin/echo variable_0 contains: $(variable_0).  variable_1 contains: $(variable_1)";

}
