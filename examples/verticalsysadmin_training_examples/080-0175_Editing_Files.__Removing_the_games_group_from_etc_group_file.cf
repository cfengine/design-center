bundle agent example {

  files:

      "/etc/group"

            handle => "delete_a_group",
           comment => "delete a specified /etc/group entry",
            edit_line => delete_group("games:x:[0-9]+:");
      # note the parameter
      # you can parameterize bundles
                     }


bundle edit_line delete_group(group) {

  delete_lines:
      "$(group).*";
                                     }

