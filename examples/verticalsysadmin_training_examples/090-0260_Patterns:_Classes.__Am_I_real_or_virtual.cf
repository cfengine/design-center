
bundle agent example {

  classes:
      "i_am_virtual"
           expression => regline("(?i).*vmware.*|.*(?i)vbox.*|(?i).*qemu.*", "/proc/scsi/scsi");
           # (?i) adds the "case-insensitive" switch
           # it's the native version of /bin/egrep -i 'vmware|vbox|qemu' /proc/scsi/scsi 


  reports:
    i_am_virtual::
      "Running inside a VM";

                     }

