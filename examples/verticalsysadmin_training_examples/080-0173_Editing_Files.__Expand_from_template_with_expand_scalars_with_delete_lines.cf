bundle agent example {

files:

  "/etc/motd"

    create => "true",
    edit_line => ExpandFromTemplate("/var/cfengine/inputs/templates/motd.tmpl");
}

bundle edit_line ExpandFromTemplate(source) {

delete_lines:

  ".*";

insert_lines:

    "$(source)"

       insert_type => "file",
       expand_scalars => "true";
}
