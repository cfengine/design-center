{
    "activated": true,
    "db": "postgresql",
    "purge": false,
    "bycontext":
    {
        "redhat|centos|fedora|suse|SuSE": { "packages": [ "postgresql", "postgresql-libs" ], "server_packages": [ "postgresql-server" ], "start_command": "/etc/init.d/postgresql restart", "process_match": "/usr/bin/postmaster.*" },

        "debian|ubuntu": { "packages": [ "postgresql-client-8.4", "postgresql-client-common", "postgresql-doc-8.4", "libpq5" ], "server_packages": [ "postgresql-8.4",  "postgresql-common" ], "start_command": "/etc/init.d/postgresql-8.4 restart", "process_match": ".*postgres.*" }
    }
}
