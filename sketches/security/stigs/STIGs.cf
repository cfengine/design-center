      slist => splitstring("$(homes)", "[\n]", 100);

      #   "accounts_to_disable" -> { "GEN004820", "GEN004840" }
      #      comment => "List of users to be disabled (not to be deleted from the system)",
      #       handle => "stigs_vars_accounts_to_disable",
      #        slist => {
