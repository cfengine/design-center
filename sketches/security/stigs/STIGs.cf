      comment => "List of unnecessary accounts",
      handle => "stigs_vars_accounts_to_delete",
      slist => {
                 "ftp",
                 "shutdown",
                 "halt",
                 "game",
                 "news",
                 "operator",
                 "gopher",
                 "nfsnobody",
      };

